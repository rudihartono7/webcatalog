@model IAIFWebCatalog.Models.Company
@{
    ViewData["Title"] = Model.Name;
    var relatedCompanies = ViewData["RelatedCompanies"] as List<IAIFWebCatalog.Models.Company>;
}

<div class="bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
            <!-- Company Header -->
            <div class="flex flex-col md:flex-row items-center md:items-start gap-8 mb-12">
                <div class="w-full md:w-1/3">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-auto rounded-lg shadow-md">
                    
                    @if (!string.IsNullOrEmpty(Model.BrochureUrl))
                    {
                        <div class="mt-4">
                            <a href="@Model.BrochureUrl" target="_blank" class="inline-flex items-center w-full px-4 py-2 bg-primary text-black rounded-md hover:bg-yellow-600 transition-colors justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Download Company Brochure
                            </a>
                        </div>
                    }
                </div>
                <div class="w-full md:w-2/3">
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                        <h1 class="text-3xl font-bold">@Model.Name</h1>
                        @if (Model.Industry != null)
                        {
                            <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">@Model.Industry.Name</span>
                        }
                    </div>
                    <p class="text-gray-600 mb-4">@Model.Category?.Name</p>
                    <p class="text-gray-800 mb-6">@Model.Description</p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Address</h3>
                                <p class="text-gray-800">@Model.Address</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Phone</h3>
                                <p class="text-gray-800">@Model.Phone</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Email</h3>
                                <p class="text-gray-800">@Model.Email</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Website</h3>
                                <a href="@Model.Website" target="_blank" class="text-primary hover:text-yellow-600">@Model.Website</a>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Founded</h3>
                                <p class="text-gray-800">@Model.FoundedYear</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-primary rounded-full p-2 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-500">Company Size</h3>
                                <p class="text-gray-800">@Model.EmployeeCount employees</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Company Description -->
            <div class="mb-12">
                <h2 class="text-2xl font-bold mb-6">About @Model.Name</h2>
                <div class="prose max-w-none">
                    <p>@Model.Description</p>
                </div>
            </div>

            <!-- Products Section -->
            @if(Model.Products != null && Model.Products.Any())
            {
                <section class="py-12 bg-gray-50 rounded-lg mb-12">
                    <div class="px-4">
                        <h2 class="text-2xl font-bold mb-8">Products & Services</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            @foreach(var item in Model.Products)
                            {
                                <div class="bg-white rounded-lg shadow-md overflow-hidden card-hover">
                                    <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-48 object-cover">
                                    <div class="p-6">
                                        <h3 class="text-xl font-semibold mb-2">@item.Name</h3>
                                        <p class="text-gray-600 mb-4">@item.Description</p>
                                        <!-- I need to add tagging display to give information this Products used by  -->
                                        @if (!string.IsNullOrEmpty(item.UserCategories))
                                        {
                                            <div class="flex flex-wrap gap-2 mb-4">
                                                @foreach(var tag in item.UserCategories.Split(','))
                                                {
                                                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">@tag</span>
                                                }
                                            </div>
                                        }
                                        <div class="flex justify-between items-center">
                                            <a href="@item.ProductUrl" class="bg-primary hover:bg-yellow-600 text-black font-medium py-2 px-4 rounded-lg transition-colors">Learn More</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            }
            
            <!-- Related Companies -->
            @if(relatedCompanies != null && relatedCompanies.Any())
            {
                <section class="mb-12">
                    <h2 class="text-2xl font-bold mb-6">Related Companies</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        @foreach(var company in relatedCompanies)
                        {
                            <div class="bg-white rounded-lg shadow-md overflow-hidden card-hover">
                                <img src="@company.ImageUrl" alt="@company.Name" class="w-full h-32 object-cover">
                                <div class="p-4">
                                    <h3 class="text-lg font-semibold mb-1">@company.Name</h3>
                                    <div class="flex items-center mb-2">
                                        <p class="text-gray-600 text-xs mr-2">@company.Category?.Name</p>
                                        @if (company.Industry != null)
                                        {
                                            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-0.5 rounded-full">@company.Industry.Name</span>
                                        }
                                    </div>
                                    <a asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id" 
                                       class="text-primary hover:text-yellow-600 text-sm font-medium">View Profile â†’</a>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            }
            
            <!-- Contact Form -->
            <div>
                <h2 class="text-2xl font-bold mb-6">Contact @Model.Name</h2>
                <form asp-controller="Companies" asp-action="Contact" asp-route-id="@Model.Id" method="post" class="bg-gray-50 p-6 rounded-lg">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
                            <input type="text" id="name" name="name" required
                                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                            <input type="email" id="email" name="email" required
                                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                    </div>
                    
                    <div class="mb-6">
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                        <input type="text" id="subject" name="subject" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                    </div>
                    
                    <div class="mb-6">
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea id="message" name="message" rows="5" required
                                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                    </div>
                    
                    <div>
                        <button type="submit" 
                                class="bg-primary text-black font-bold py-2 px-6 rounded-md hover:bg-yellow-600 transition-colors">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>