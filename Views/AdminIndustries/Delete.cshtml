@model IAIFWebCatalog.Models.Industry

@{
    ViewData["Title"] = "Delete Industry";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Delete Industry</h1>
        <p class="text-red-600 mt-2">Are you sure you want to delete this industry?</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <dl class="grid grid-cols-1 gap-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Name</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Description</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Companies</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @if (Model.Companies != null && Model.Companies.Any())
                    {
                        <div class="text-red-600">Warning: This industry has @Model.Companies.Count associated companies. Deleting it may affect these companies.</div>
                    }
                    else
                    {
                        <span>No companies associated with this industry.</span>
                    }
                </dd>
            </div>
        </dl>
        
        <div class="flex items-center justify-between mt-6">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900">Back to List</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">Delete</button>
            </form>
        </div>
    </div>
</div>