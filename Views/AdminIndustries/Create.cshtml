@model IAIFWebCatalog.Models.Industry

@{
    ViewData["Title"] = "Create Industry";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Create Industry</h1>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="mb-4">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea asp-for="Description" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>
            
            <div class="flex items-center justify-between mt-6">
                <a asp-action="Index" class="text-gray-600 hover:text-gray-900">Back to List</a>
                <button type="submit" class="bg-primary text-black px-4 py-2 rounded-md hover:bg-yellow-600 transition-colors">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}