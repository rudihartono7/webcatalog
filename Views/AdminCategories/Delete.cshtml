@model IAIFWebCatalog.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Delete Category</h1>
        <p class="text-red-600 mt-2">Are you sure you want to delete this category?</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="col-span-1">
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Name</dd>
            </div>
            
            <div class="col-span-1">
                <dt class="text-sm font-medium text-gray-500">Style</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    <span class="@Model.BackgroundClass @Model.IconClass p-2 rounded-full inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </span>
                    @Model.BackgroundClass, @Model.IconClass
                </dd>
            </div>
            
            <div class="col-span-2">
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Description</dd>
            </div>
        </dl>
        
        <div class="flex items-center justify-between mt-6">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900">Back to List</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">Delete</button>
            </form>
        </div>
    </div>
</div>