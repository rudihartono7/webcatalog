@model IAIFWebCatalog.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-20 md:py-32">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Discover Companies & Products</h1>
        <p class="text-xl md:text-2xl mb-8">IAIF Web Catalog - Your Business Directory</p>
        <div class="max-w-md mx-auto">
            <div class="relative">
                <form asp-controller="Search" asp-action="Index" method="get">
                    <input type="text" name="query" placeholder="Search companies or products..." 
                           class="w-full px-4 py-3 rounded-full focus:outline-none focus:ring-2 focus:ring-primary text-gray-800">
                    <button type="submit" class="absolute right-1 top-1 bg-primary text-black p-2 rounded-full hover:bg-yellow-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
        <a asp-controller="Categories" asp-action="Index" class="mt-8 inline-block bg-primary text-black font-bold py-3 px-8 rounded-full hover:bg-yellow-600 transition-colors">Explore Now</a>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Featured Categories</h2>
        <div class="relative">
            <div class="flex overflow-x-auto pb-6 space-x-4 scrollbar-hide">
                @foreach (var category in Model.FeaturedCategories)
                {
                    <div class="flex-shrink-0 w-40 bg-white rounded-lg shadow-md overflow-hidden card-hover">
                        <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" class="block p-4 text-center">
                            <div class="inline-block p-3 rounded-full @category.BackgroundClass mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 @category.IconClass" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold">@category.Name</h3>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Featured Companies -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Featured Companies</h2>
        <div class="relative">
            <div class="flex overflow-x-auto pb-6 scrollbar-hide space-x-6">
                @foreach (var company in Model.FeaturedCompanies)
                {
                    <div class="flex-shrink-0 w-64 bg-white rounded-lg shadow-md overflow-hidden card-hover">
                        <img src="@company.ImageUrl" alt="@company.Name" class="w-full h-40 object-cover">
                        <div class="p-4">
                            <h3 class="text-lg font-semibold mb-1">@company.Name</h3>
                            <p class="text-gray-600 text-sm mb-3">@company.Category</p>
                            <a asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id" class="text-primary hover:text-yellow-600 font-medium text-sm">View Profile →</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-16 bg-primary">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-black mb-4">Ready to Join IAIF Web Catalog?</h2>
        <p class="text-black text-lg mb-8 max-w-2xl mx-auto">List your company in our directory and connect with potential customers and partners.</p>
        <a asp-controller="Home" asp-action="RegisterCompany" class="bg-black text-white font-bold py-3 px-8 rounded-full hover:bg-gray-800 transition-colors register-company-btn">Register Your Company</a>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
        });
    </script>
}
