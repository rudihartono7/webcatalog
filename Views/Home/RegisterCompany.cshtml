@model IAIFWebCatalog.ViewModels.RegisterCompanyViewModel

@{
    ViewData["Title"] = "Register Company";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Register Your Company</h2>
        
        <form asp-action="RegisterCompany" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <!-- Company Name -->
            <div>
                <label asp-for="CompanyName" class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                <input asp-for="CompanyName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <span asp-validation-for="CompanyName" class="text-red-500 text-sm"></span>
            </div>

            <!-- Company Category -->
            <div class="mb-4">
                <label for="CategoryId" class="block text-sm font-medium text-gray-700">Company Category</label>
                <select asp-for="CategoryId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" asp-items="ViewBag.Categories">
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Company Size -->
            <div>
                <label asp-for="CompanySize" class="block text-sm font-medium text-gray-700 mb-1">Company Size</label>
                <select asp-for="CompanySize" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                    <option value="" disabled selected>Select company size</option>
                    <option value="1-10">1-10 employees</option>
                    <option value="11-50">11-50 employees</option>
                    <option value="51-200">51-200 employees</option>
                    <option value="201-500">201-500 employees</option>
                    <option value="501-1000">501-1000 employees</option>
                    <option value="1000+">1000+ employees</option>
                </select>
                <span asp-validation-for="CompanySize" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Email Address -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Confirm Password -->
            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Terms and Conditions -->
            <div class="flex items-start">
                <input asp-for="AcceptTerms" class="mt-1 h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                <label asp-for="AcceptTerms" class="ml-2 block text-sm text-gray-700">
                    I agree to the <a href="#" class="text-primary hover:text-yellow-600">Terms and Conditions</a>
                </label>
                <span asp-validation-for="AcceptTerms" class="text-red-500 text-sm"></span>
            </div>
            
            <!-- Submit Button -->
            <div>
                <button type="submit" class="w-full bg-primary text-black font-bold py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors">
                    Register
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}