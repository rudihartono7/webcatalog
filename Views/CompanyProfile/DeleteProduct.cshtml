@model IAIFWebCatalog.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="max-w-3xl mx-auto">
            <div class="border border-red-300 rounded-lg overflow-hidden">
                <div class="bg-red-600 text-white px-6 py-4">
                    <h3 class="text-xl font-bold">Delete Product</h3>
                </div>
                <div class="p-6">
                    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
                        <div class="flex">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <p class="text-yellow-700">Are you sure you want to delete this product? This action cannot be undone.</p>
                        </div>
                    </div>
                    
                    <div class="flex flex-col md:flex-row gap-6 mt-6">
                        <div class="md:w-1/3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="w-full h-auto rounded-lg shadow-sm" alt="@Model.Name" />
                            }
                            else
                            {
                                <div class="bg-gray-100 p-6 text-center rounded-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <p class="mt-2 text-gray-500 text-sm">No image</p>
                                </div>
                            }
                        </div>
                        <div class="md:w-2/3">
                            <h4 class="text-xl font-semibold mb-2">@Model.Name</h4>
                            <p class="text-gray-600">@Model.Description</p>
                        </div>
                    </div>
                    
                    <form asp-action="DeleteProduct" method="post" class="mt-6">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="flex gap-3">
                            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Delete Product
                            </button>
                            <a asp-action="Products" class="border border-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-50 transition-colors">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>