@model IAIFWebCatalog.Models.Company

@{
    ViewData["Title"] = "Delete Company";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Delete Company</h1>
        <p class="text-red-600 mt-2">Are you sure you want to delete this company?</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2 flex items-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-16 h-16 object-cover rounded-lg mr-4">
                }
                <div>
                    <h2 class="text-xl font-bold">@Model.Name</h2>
                    <p class="text-gray-600">@Model.Category</p>
                </div>
            </div>
            
            <div>
                <h3 class="text-lg font-semibold mb-2">Company Details</h3>
                <dl class="space-y-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Industry</dt>
                        <dd class="text-sm text-gray-900">@(Model.Industry?.Name ?? "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Founded</dt>
                        <dd class="text-sm text-gray-900">@(Model.FoundedYear > 0 ? Model.FoundedYear.ToString() : "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Employees</dt>
                        <dd class="text-sm text-gray-900">@(Model.EmployeeCount ?? "N/A")</dd>
                    </div>
                </dl>
            </div>
            
            <div>
                <h3 class="text-lg font-semibold mb-2">Contact Information</h3>
                <dl class="space-y-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Email</dt>
                        <dd class="text-sm text-gray-900">@(Model.Email ?? "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Phone</dt>
                        <dd class="text-sm text-gray-900">@(Model.Phone ?? "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Address</dt>
                        <dd class="text-sm text-gray-900">@(Model.Address ?? "N/A")</dd>
                    </div>
                </dl>
            </div>
            
            <div class="md:col-span-2">
                <h3 class="text-lg font-semibold mb-2">Description</h3>
                <p class="text-gray-700">@Model.Description</p>
            </div>
        </div>
        
        <div class="flex items-center justify-between mt-8 pt-4 border-t border-gray-200">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900">Back to List</a>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">Delete</button>
            </form>
        </div>
    </div>
</div>