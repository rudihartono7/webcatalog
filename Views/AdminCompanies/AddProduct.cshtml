@model IAIFWebCatalog.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Add Product</h1>
        <p class="text-gray-600">Adding product for @Model.CompanyName</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <form asp-action="AddProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="CompanyId" />
            <input type="hidden" asp-for="CompanyName" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-2">
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                    <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea asp-for="Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input asp-for="Price" type="number" step="0.01" class="w-full pl-7 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
                    <input asp-for="ImageUrl" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" />
                    <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                </div>
            </div>
            
            <div class="flex items-center justify-between mt-8">
                <a asp-action="Details" asp-route-id="@Model.CompanyId" class="text-gray-600 hover:text-gray-900">Back to Company</a>
                <button type="submit" class="bg-primary text-black px-4 py-2 rounded-md hover:bg-yellow-600 transition-colors">Add Product</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}