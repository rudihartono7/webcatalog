@model IAIFWebCatalog.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
            <h2 class="text-2xl font-bold mb-6 text-center">Log in to your account</h2>
            
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-red-500 mb-4"></div>
                
                <div class="mb-4">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-6 flex items-center">
                    <input asp-for="RememberMe" class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-700"></label>
                </div>
                
                <div>
                    <button type="submit" class="w-full bg-primary text-black font-bold py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors">
                        Log in
                    </button>
                </div>
                
                <div class="mt-4 text-center">
                    <p class="text-sm text-gray-600">
                        Don't have an account? 
                        <a href="#" class="text-primary hover:text-yellow-600 register-company-btn">Register your company</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}