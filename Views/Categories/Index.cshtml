@model List<IAIFWebCatalog.Models.Category>
@{
    ViewData["Title"] = "Categories";
    var categoryCounts = ViewData["CategoryCounts"] as Dictionary<int, int>;
}

<!-- Hero Section -->
<section class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-4">Browse Categories</h1>
        <p class="text-gray-600 text-center max-w-2xl mx-auto">Discover companies across various industries in our comprehensive business directory.</p>
    </div>
</section>

<!-- Categories Grid -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            @foreach (var category in Model)
            {
                <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" 
                   class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="@category.BackgroundClass p-3 rounded-full mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 @category.IconClass" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold">@category.Name</h3>
                        </div>
                        <p class="text-gray-600 mb-4">@category.Description</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500">
                                @(categoryCounts != null && categoryCounts.ContainsKey(category.Id) ? categoryCounts[category.Id] : 0) companies
                            </span>
                            <span class="text-primary font-medium">View Category â†’</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-16 bg-primary">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-black mb-4">Ready to Join IAIF Web Catalog?</h2>
        <p class="text-black text-lg mb-8 max-w-2xl mx-auto">List your company in our directory and connect with potential customers and partners.</p>
        <a href="#" class="bg-black text-white font-bold py-3 px-8 rounded-full hover:bg-gray-800 transition-colors">Register Your Company</a>
    </div>
</section>